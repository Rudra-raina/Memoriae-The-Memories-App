<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="10dp"
                android:scaleY="1"
                android:text="abcdefghijklmnqr"
                android:textColor="@color/bg_color"
                android:layout_height="match_parent"
                android:background="@color/bg_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvCityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/ahmedabad"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvColor"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="25 Oct 2021"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvColor"
                app:layout_constraintTop_toBottomOf="@id/tvCityName"
                tools:ignore="SmallSp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivCircleImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/_10sdp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvColor"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/ivCircleImage"
                android:textStyle="italic|bold"
                tools:text="Amazing Day With Friends"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                app:layout_constraintEnd_toStartOf="@id/tvColor"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_margin="10dp"
                tools:text="We all ate at Mcdonalds. It was so much fun"/>

            <LinearLayout
                android:id="@+id/llStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/tvColor"
                android:layout_marginEnd="@dimen/_6sdp"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/starFive"
                    android:contentDescription="@string/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/tvColor"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintVertical_bias=".7"
                    android:paddingBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    />
                <ImageView
                    android:contentDescription="@string/image"
                    android:id="@+id/starFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/tvColor"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintVertical_bias=".7"

                    android:paddingBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    />
                <ImageView
                    android:contentDescription="@string/image"
                    android:id="@+id/starThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/tvColor"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintVertical_bias=".7"
                    android:paddingBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    />
                <ImageView
                    android:contentDescription="@string/image"
                    android:id="@+id/starTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/tvColor"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintVertical_bias=".7"
                    android:paddingBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    />
                <ImageView
                    android:contentDescription="@string/image"
                    android:id="@+id/starOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/tvColor"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintVertical_bias=".7"
                    android:paddingBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>